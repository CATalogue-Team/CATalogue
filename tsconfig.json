{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$lib/test-adapters": ["src/lib/test-adapters"],
      "src/*": ["*"],
      "*": ["*", "src/*"]
    },
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "module": "node16",
    "moduleResolution": "node16",
    "verbatimModuleSyntax": true,
    "types": ["vitest/globals", "@sveltejs/kit", "@testing-library/svelte"],
    "baseUrl": "src"
  },
  "include": ["src/**/*", "tests/**/*", "src/svelte.d.ts"]
}
