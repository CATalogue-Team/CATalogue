{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "allowImportingTsExtensions": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2015", "dom"],
    "target": "es2015",
    "module": "node16",
    "moduleResolution": "node16",
    "verbatimModuleSyntax": true,
    "types": ["vitest/globals", "@sveltejs/kit", "@testing-library/svelte"]
  },
  "include": ["src/**/*", "tests/**/*", "src/svelte.d.ts"]
}
